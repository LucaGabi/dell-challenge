@model IEnumerable<DellChallenge.D2.Web.Models.ProductModel>

@{
    ViewData["Title"] = "View";
}
<h4>All Products</h4>

<a asp-action="Add" class="btn btn-primary">Add product</a>

<hr />
@{ TempData.TryGetValue("error",out var error); }
@if (error!=null)
{
    <div class="alert-warning">@error</div>
}

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-4">
            @item.Name - @item.Category
            <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            <a class="btn btn-primary" asp-action="Update" asp-route-id="@item.Id">Update</a>
        </div>
    </div>
}


